<h3>以下の内容で、送信する。</h3>
<%= form_with(model: @letter, url: confirm_new_or_edit(params[:id]), local: true) do |form| %>
  <%= form.hidden_field :content %>
  <p>内容:<%= @letter.content %></p>
  <%= form.submit  "投稿する" %>
<% end %>

<%= form_with(model: @letter, url: new_letter_path, local: true, method: 'get') do |form| %>
  <%= form.hidden_field :content %>
  <%= form.submit "戻る",name: 'back' %>
<% end %>
